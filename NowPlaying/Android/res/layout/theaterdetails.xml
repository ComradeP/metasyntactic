<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent">
    <RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:animationCache="false"
        android:paddingTop="0px"
        android:paddingBottom="0px"
        android:paddingLeft="0px"
        android:paddingRight="0px">
        <LinearLayout
            android:id="@+id/header"
            android:orientation="vertical"
            android:layout_width="fill_parent"
            android:layout_height="65dip"
            android:background="@color/title_background">
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="fill_parent"
                android:layout_height="64dip">
                <TextView
                    android:id="@+id/theater"
                    android:layout_width="wrap_content"
                    android:paddingLeft="5px"
                    android:paddingTop="20px"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:textColor="?android:attr/textColorPrimaryDisableOnly"
                    android:textStyle="bold"
                    android:layout_centerVertical="true"
                    android:shadowColor="@color/shadow"
                    android:shadowRadius="2"
                    android:singleLine="true"
                    android:ellipsize="end" />
            </LinearLayout>
            <View
                android:id="@+id/divider2"
                android:layout_width="fill_parent"
                android:layout_height="1dip"
                android:background="@android:drawable/divider_horizontal_dark" />
        </LinearLayout>
        <TextView
            android:id="@+id/maplbl"
            android:layout_marginTop="60px"
            android:layout_below="@id/divider2"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:paddingLeft="8dip"
            android:paddingRight="10dip"
            android:background="@drawable/dark_header_dithered"
            android:textColor="?android:attr/textColorSecondary"
            android:textStyle="bold"
            android:text="Map"
            android:textAppearance="?android:attr/textAppearanceSmall" />
        <ImageView
            android:id="@+id/divider3"
            android:layout_below="@id/maplbl"
            android:layout_width="fill_parent"
            android:layout_height="1px"
            android:background="@android:drawable/divider_horizontal_dark" />
        <TextView
            android:id="@+id/map"
            android:minHeight="60px"
            android:layout_below="@id/maplbl"
            android:layout_width="250px"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dip"
            android:layout_marginRight="10dip"
            android:gravity="center_vertical"
            android:singleLine="false"
            android:textSize="14px"
            android:paddingTop="5px"
            android:paddingBottom="5px"
            android:textColor="?android:attr/textColorPrimary"
            android:layout_alignParentLeft="true" />
        <ImageView
            android:id="@+id/mapicon"
            android:layout_below="@id/maplbl"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="8dip"
            android:layout_toRightOf="@id/map"
            android:src="@drawable/sym_action_map"
            android:layout_alignParentRight="true"
            android:gravity="center_vertical"
            android:layout_marginTop="10px"
            android:layout_marginBottom="5px" />
        <ImageView
            android:id="@+id/divider4"
            android:layout_below="@id/map"
            android:layout_width="fill_parent"
            android:layout_height="1px"
            android:background="@android:drawable/divider_horizontal_dark" />
        <TextView
            android:id="@+id/phonelbl"
            android:layout_below="@id/divider4"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:paddingLeft="8dip"
            android:paddingRight="10dip"
            android:background="@drawable/dark_header_dithered"
            android:textColor="?android:attr/textColorSecondary"
            android:textStyle="bold"
            android:text="Phone"
            android:textAppearance="?android:attr/textAppearanceSmall" />
        <ImageView
            android:id="@+id/divider5"
            android:layout_below="@id/phonelbl"
            android:layout_width="fill_parent"
            android:layout_height="1px"
            android:background="@android:drawable/divider_horizontal_dark" />
        <TextView
            android:id="@+id/phone"
            android:layout_below="@id/phonelbl"
            android:minHeight="60px"
            android:layout_width="250px"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dip"
            android:layout_marginRight="10dip"
            android:gravity="center_vertical"
            android:singleLine="false"
            android:textSize="14px"
            android:layout_marginTop="5px"
            android:layout_marginBottom="5px"
            android:textColor="?android:attr/textColorPrimary"
            android:layout_alignParentLeft="true" />
        <ImageView
            android:id="@+id/phoneicon"
            android:layout_below="@id/phonelbl"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="8dip"
            android:layout_marginTop="10px"
            android:layout_marginBottom="5px"
            android:layout_toRightOf="@id/phone"
            android:src="@drawable/sym_action_call"
            android:layout_alignParentRight="true"
            android:gravity="center_vertical" />
    </RelativeLayout>
    <TextView
        android:id="@+id/showtimeslbl"
        android:layout_below="@id/divider2"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:paddingLeft="8dip"
        android:paddingRight="10dip"
        android:background="@drawable/dark_header_dithered"
        android:textColor="?android:attr/textColorSecondary"
        android:textStyle="bold"
        android:text="Now Showing"
        android:textAppearance="?android:attr/textAppearanceSmall" />
    <ImageView
        android:layout_width="fill_parent"
        android:layout_height="1px"
        android:gravity="center_vertical"
        android:background="@android:drawable/divider_horizontal_dark" />
    <ListView
        android:id="@android:id/list"
        android:layout_width="fill_parent"
        android:layout_height="900px" />
</LinearLayout>
