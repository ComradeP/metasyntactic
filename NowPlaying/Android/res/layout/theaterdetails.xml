<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    >
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:animationCache="false"
    android:paddingTop="0px"
    android:paddingBottom="0px"
    android:paddingLeft="0px"
    android:paddingRight="0px">
    <TextView
        android:id="@+id/theater"
        android:layout_width="fill_parent"
        android:layout_height="50px"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:gravity="center_vertical"
        android:textColor="?android:attr/textColorSecondary"
         android:layout_marginLeft="8dip"
        android:layout_marginRight="10dip"
        android:singleLine="true"
         />
    <ImageView
        android:id="@+id/divider2"
        android:layout_width="fill_parent"
        android:layout_height="1px"
        android:layout_below="@id/theater"
        android:background="@drawable/divider_horizontal_bright" />
    <TextView
        android:id="@+id/maplbl"
        android:layout_below="@id/divider2"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
         android:paddingLeft="8dip"
        android:paddingRight="10dip"
        android:background="@drawable/dark_header_dithered"
        android:textColor="?android:attr/textColorSecondary"
        android:textStyle="bold"
        android:text="Map"
        android:textAppearance="?android:attr/textAppearanceSmall"
        />
    <ImageView
        id="@+id/divider3"
        android:layout_below="@id/maplbl"
        android:layout_width="fill_parent"
        android:layout_height="1px"
        
        android:background="@drawable/divider_horizontal_bright" />
    <TextView
        android:id="@+id/map"
        android:minHeight="50px"
        android:layout_below="@id/maplbl"
        android:layout_width="250px"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dip"
        android:layout_marginRight="10dip"
        android:gravity="center_vertical"
        android:singleLine="false"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:paddingTop="5px"
        android:paddingBottom="5px"
        android:text="test"
        android:layout_alignParentLeft="true" />
    <ImageView
        android:id="@+id/mapicon"
        android:layout_below="@id/maplbl"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="8dip"
        android:layout_toRightOf="@id/map"
        android:src="@drawable/sym_action_map"
        android:layout_alignParentRight="true"
        android:gravity="center_vertical"
         android:paddingTop="5px"
        android:paddingBottom="5px" />
    <ImageView
        android:id="@+id/divider4"
        android:layout_below="@id/map"
        android:layout_width="fill_parent"
        android:layout_height="1px"
        
        android:background="@drawable/divider_horizontal_bright" />
    <TextView
        android:id="@+id/phonelbl"
        android:layout_below="@id/divider4"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
         android:paddingLeft="8dip"
        android:paddingRight="10dip"
        android:background="@drawable/dark_header_dithered"
        android:textColor="?android:attr/textColorSecondary"
        android:textStyle="bold"
        android:text="Phone"
        android:textAppearance="?android:attr/textAppearanceSmall"
     />
    <ImageView
        id="@+id/divider5"
        android:layout_below="@id/phonelbl" 
        android:layout_width="fill_parent"
        android:layout_height="1px"
        android:background="@drawable/divider_horizontal_bright"
        />
    <TextView
        android:id="@+id/phone"
        android:layout_below="@id/phonelbl"
         android:minHeight="50px"
        android:layout_width="250px"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dip"
        android:layout_marginRight="10dip"
        android:gravity="center_vertical"
        android:singleLine="false"
        android:textAppearance="?android:attr/textAppearanceSmall"
        
        
        android:layout_alignParentLeft="true" />
    <ImageView
        android:id="@+id/phoneicon"
        android:layout_below="@id/phonelbl"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="8dip"
         android:paddingTop="10px"
        android:paddingBottom="10px"
        android:layout_toRightOf="@id/phone"
        android:src="@android:drawable/sym_action_call"
        android:layout_alignParentRight="true"
        android:gravity="center_vertical" />
        </RelativeLayout>
       
    <TextView
       
       
        android:layout_width="fill_parent"
        android:layout_height="5px"
        android:gravity="center_vertical"
       
       android:background="@drawable/divider_horizontal_bright"
        android:textColor="?android:attr/textColorSecondary"
      
        android:textAppearance="?android:attr/textAppearanceSmall"
     />
  <TextView
       
       
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:minHeight="40px"
         android:paddingLeft="8dip"
        android:paddingRight="10dip"
        android:textColor="?android:attr/textColorSecondary"
      android:textStyle="bold"
      android:text="Showtimes"
        android:textAppearance="?android:attr/textAppearanceMedium"
     />
  
    <ListView
        android:id="@android:id/list"
        android:layout_width="fill_parent"
        android:layout_height="200px"       
        android:layout_gravity="bottom"
        
        android:layoutAnimation="@anim/layout_bottom_to_top_slide" />
        </LinearLayout>
