<?xml version="1.0" encoding="utf-8"?>
  
    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"     
     android:layout_marginTop="0dip"
     android:layout_gravity="top"     
     android:layout_height="wrap_content" 
     android:layout_marginBottom="0dip"  
    >
    <Button android:id="@+id/score"
             android:layout_width="30px"
            android:layout_height="34px"
            
            android:gravity="center"
            android:layout_marginTop="4dip"
             android:layout_marginLeft="10dip" 
               android:textAppearance="?android:attr/textAppearanceSmall"
            android:textColor = "#ffffff"
      />
      <TextView android:id="@+id/title"
            android:layout_width="fill_parent"                        
            android:textStyle="bold"            
            android:gravity="center"
            android:layout_height="40px"
            android:layout_toRightOf ="@id/score"
              android:layout_gravity="top|center_horizontal"
              android:textSize="18px"
              android:layout_centerHorizontal="true"
          android:textColor = "#ffffff"
          android:layout_marginBottom = "5px"
      />
  
           
    <ImageView android:id="@+id/poster"
             android:layout_width="130px"
             android:layout_height="168px"   
             android:gravity="top|left" 
             android:src="@drawable/image_not_available"
             android:layout_marginLeft = "5dip"
             android:layout_marginRight = "10dip"
             android:layout_below = "@id/title"
             android:layout_alignParentLeft="true"        
             android:scaleType="fitXY"  
           
      />
          <TextView android:id="@+id/rating"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"                        
            android:gravity="left"
           
            android:layout_below="@id/title"
           android:layout_toRightOf="@id/poster"
           android:paddingTop="2dip"
          android:layout_marginTop="50px"
             android:textColor = "#f0f0f0"
           
      />
        <TextView android:id="@+id/length"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"                        
            android:gravity="left"
           android:layout_toRightOf="@id/poster"
           android:paddingTop="2dip"
           android:layout_below ="@id/rating"
            
             android:textColor = "#f0f0f0"
           
      />
        <TextView android:id="@+id/genre"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"                        
            android:gravity="left"
           android:layout_toRightOf="@id/poster"
           android:paddingTop="2dip"
           android:layout_below ="@id/length"
            
             android:textColor = "#f0f0f0"
           
      />
       <TextView android:id="@+id/more"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"                        
            android:gravity="left"
           android:layout_toRightOf="@id/poster"
           android:layout_marginTop="15px"
           android:layout_below ="@id/genre"
            android:textStyle="bold"
            android:text="More"
            
            
             android:textColor = "#ffffff"
           
      />
      
       <Button android:id="@+id/togglebtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"     
             android:background="@drawable/expander_ic_minimized"
             android:layout_toRightOf="@id/more"
           android:layout_gravity="top"
           android:layout_below ="@id/genre"
          android:layout_marginLeft="5dip" 
             
      />
   
    
    <ImageView android:id="@+id/divider"
            android:layout_width="fill_parent"
            android:layout_height="1px"     
             android:background="@drawable/divider_horizontal_bright"
             android:layout_below="@id/poster"
              android:layout_marginBottom="5dip"
           android:layout_marginTop="10dip"
      />
       
    </RelativeLayout>   
