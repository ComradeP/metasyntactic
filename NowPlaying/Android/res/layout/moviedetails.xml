<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content">   
    <RelativeLayout
    android:layout_width="fill_parent"     
     android:layout_marginTop="0dip"
     android:layout_gravity="top"     
     android:layout_height="wrap_content" 
     android:layout_marginBottom="0dip"  
    >
    
      <TextView android:id="@+id/header"
            android:layout_width="wrap_content"                        
            android:textStyle="bold"            
            android:gravity="center"
            android:layout_height="40px"
            android:layout_centerHorizontal ="true"
              android:layout_gravity="top"
           android:layout_marginTop="10dip"
            android:layout_marginBottom="10dip"
            android:textAppearance="?android:attr/textAppearanceMedium"
          android:textColor = "?android:attr/textColorPrimary"
      />
    
   
    <ImageView android:id="@+id/poster"
            android:layout_width="86px"
            android:layout_height="127px"     
             android:src="@drawable/image_not_available"
             android:padding="2dip"
             android:layout_below = "@id/header"
            android:layout_marginLeft="2dip"
            android:layout_marginRight="10dip"
            android:layout_marginBottom="10dip"
           
      />
     
      <TextView android:id="@+id/desc1"
            android:layout_width="fill_parent"
            android:layout_height="132px"                        
            android:gravity="left"
            android:text = "No synopsis available."
           android:layout_toRightOf="@id/poster"
            android:layout_below = "@id/header"
            android:paddingTop="2dip"
            android:paddingRight="2dip"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textColor = "?android:attr/textColorPrimary"
            
           
      />
       <TextView android:id="@+id/desc2"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
                         
            android:gravity="left"
           android:paddingLeft="2dip"
            android:paddingTop="5px"
           android:paddingRight="2dip"
             android:layout_below="@id/poster"
             
           android:textAppearance="?android:attr/textAppearanceSmall"
            android:textColor = "?android:attr/textColorPrimary"
            
           
      />
      
      <ImageView android:id="@+id/divider"
            android:layout_width="fill_parent"
            android:layout_height="1px"     
             android:background="@drawable/divider_horizontal_bright"
             android:layout_below="@id/desc2"
              android:layout_marginBottom="2dip"
           android:layout_marginTop="2dip"
      />
       <Button android:id="@+id/togglebtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"     
             android:background="@drawable/expander_ic_minimized"
             android:padding="2dip"
             android:layout_below="@id/divider"
             
             
      />
      <TextView android:id="@+id/rated_length"
            android:layout_width="fill_parent"
            android:layout_height="38px"                        
            android:gravity="center"
            android:text = "Rated G. 1 hour 30 minutes."
            android:layout_below="@id/divider"
           android:layout_toRightOf="@id/togglebtn"
           android:paddingTop="2dip"
            android:paddingLeft="2dip"
            android:textStyle="bold"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textColor = "?android:attr/textColorPrimary"
           android:layout_centerHorizontal ="true"
      />
      
      <ImageView android:id="@+id/divider3"
            android:layout_width="fill_parent"
            android:layout_height="1px"     
             android:background="@drawable/divider_horizontal_bright"
             android:layout_below="@id/rated_length"
            android:layout_marginBottom="4dip"
           android:layout_marginTop="2dip"
      />
      
        <Button android:id="@+id/trailerbtn"
            android:layout_width="150px"
            android:layout_height="wrap_content"     
             android:text = "Play Trailer"            
             android:layout_below="@id/divider3"
              android:layout_alignParentLeft="true"
             
             
      />
        <Button android:id="@+id/reviewsbtn"
            android:layout_width="150px"
            android:layout_height="wrap_content"     
            android:text = "Read Reviews"           
             android:layout_below="@id/divider3"           
             android:layout_alignParentRight="true"
      />
        <Button android:id="@+id/imdbbtn"
            android:layout_width="150px"
            android:layout_height="wrap_content"     
             android:text = "Visit IMDb"           
             android:layout_below="@id/trailerbtn"
          android:layout_alignParentLeft="true"
            
      />
        <Button android:id="@+id/emailbtn"
            android:layout_width="150px"
            android:layout_height="wrap_content"     
            android:text = "E-mail Listings"            
            android:layout_below="@id/reviewsbtn"             
           android:layout_alignParentRight="true"          
      />
      
    </RelativeLayout>   
</ScrollView>